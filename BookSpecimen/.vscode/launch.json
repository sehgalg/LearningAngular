{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "chrome",
          "request": "launch",
          "name": "Launch Chrome against localhost",
          "url": "http://localhost:4200",
          "webRoot": "${workspaceRoot}"
      },
      {
          "type": "chrome",
          "request": "attach",
          "name": "Attach to Chrome with Sourcemaps",
          "port": 9222,
          "sourceMaps": true,
          "sourceMapPathOverrides": {
              "webpack:///*": "/*"
          },
          "webRoot": "${workspaceRoot}/src"
      }
  ]
}
